am-navbar

am-spinner(*ngIf="isLoading")
.container.user-details(*ngIf="!isLoading && user")
  h2 {{ user.name }}
  p
    strong Email:
    a(href="mailto:{{ user.email }}") {{ user.email }}
  .buttons.text-right
    a.btn.btn-light(routerLink="/users") Cancel
    a.btn.btn-primary(routerLink="/users/{{ user.userId }}/edit") Edit
